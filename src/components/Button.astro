---
interface Props {
  bgColor?: string;
  fullWidth?: boolean;
}

const { bgColor, fullWidth } = Astro.props;
---

<button type="button" class={`bg-${bgColor || 'transparent'} ${fullWidth ? 'w-full' : ''}`}>
  <slot />
</button>

<style>
  button {
    @apply border-2 fw-600 px-5 py-2 rounded-3 text-xl md-text-2xl;
  }
</style>
